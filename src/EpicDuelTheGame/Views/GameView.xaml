<UserControl x:Class="EpicDuelTheGame.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EpicDuelTheGame.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid RenderOptions.EdgeMode="Aliased">
        <!-- Ustawienie LinearGradientBrush jako tła strony -->
        <!-- <Grid.Background> -->
        <!--     <LinearGradientBrush StartPoint="0,0" EndPoint="1,1"> -->
        <!--         <GradientStop Offset="0" Color="#7b93a8"/> -->
        <!--         <GradientStop Offset="0.5" Color="#46cb29"/> -->
        <!--         <GradientStop Offset="1" Color="#19370a"/> -->
        <!--     </LinearGradientBrush> -->
        <!-- </Grid.Background> -->
        
        <Grid.Background>
            <LinearGradientBrush x:Name="AnimatedGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Offset="0" Color="Red"/>
                <GradientStop Offset="0.1" Color="Orange"/>
                <GradientStop Offset="0.2" Color="Yellow"/>
                <GradientStop Offset="0.3" Color="Green"/>
                <GradientStop Offset="0.4" Color="Blue"/>
                <GradientStop Offset="0.5" Color="Indigo"/>
                <GradientStop Offset="0.6" Color="Violet"/>
                <GradientStop Offset="0.7" Color="Purple"/>
                <GradientStop Offset="0.8" Color="Pink"/>
                <GradientStop Offset="1" Color="Red"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <Grid.Triggers>
            <EventTrigger RoutedEvent="Grid.Loaded">
                <BeginStoryboard>
                    <Storyboard RepeatBehavior="Forever" Timeline.DesiredFrameRate="60" AutoReverse="True">
                        <ColorAnimation Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[0].Color" 
                                        To="Violet" Duration="0:0:2"/>
                        <ColorAnimation Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[1].Color" 
                                        To="Red" Duration="0:0:2"/>
                        <ColorAnimation Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[2].Color" 
                                        To="Orange" Duration="0:0:2"/>
                        <ColorAnimation Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[3].Color" 
                                        To="Yellow" Duration="0:0:2"/>
                        <ColorAnimation Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[4].Color" 
                                        To="Green" Duration="0:0:2"/>
                        <ColorAnimation Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[5].Color" 
                                        To="Blue" Duration="0:0:2"/>
                        <ColorAnimation Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[6].Color" 
                                        To="Indigo" Duration="0:0:2"/>
                        <ColorAnimation Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[7].Color" 
                                        To="Violet" Duration="0:0:2"/>
                        <ColorAnimation Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[8].Color" 
                                        To="Pink" Duration="0:0:2"/>
                        <ColorAnimation Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[9].Color" 
                                        To="Red" Duration="0:0:2"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>
        
        <!-- <Grid.Triggers> -->
