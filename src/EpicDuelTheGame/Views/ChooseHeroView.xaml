        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Button
                Grid.Row="0"
                Command="{Binding UserImageClickedCommand}"
                CommandParameter="{Binding Images[0]}"
                Margin="15">
                <Button.Content>
                    <Image Source="{Binding Images[0].Path}" 
                                Width="auto" 
                                Height="auto" 
                                Stretch="UniformToFill"/>
                </Button.Content>
            </Button>

            <Button
                Grid.Row="1"
                Command="{Binding UserImageClickedCommand}"
                CommandParameter="{Binding Images[1]}"
                Margin="15,0">
                <Button.Content>
                    <Image Source="{Binding Images[1].Path}" 
                                Width="auto" 
                                Height="auto" 
                                Stretch="UniformToFill"/>
                </Button.Content>
            </Button>

            <Button
                Grid.Row="2"
                Command="{Binding UserImageClickedCommand}"
                CommandParameter="{Binding Images[2]}"
                Margin="15,15,15,0">
                <Button.Content>
                    <Image Source="{Binding Images[2].Path}" 
                                Width="auto" 
                                Height="auto" 
                                Stretch="UniformToFill"/>
                </Button.Content>
            </Button>
        </Grid>

