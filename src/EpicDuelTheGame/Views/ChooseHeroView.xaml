        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Button
                Grid.Row="0"
                Command="{Binding OpponentImageClickedCommand}"
                CommandParameter="{Binding Images[0]}"
                Margin="15">
                <Button.Content>
